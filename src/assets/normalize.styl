*
  padding 0
  margin 0
  box-sizing border-box
  font-family inherit
  font-style inherit
  font-size 100%
  border 0 none
  outline: 0
  text-decoration none

html
  font-size 14px
  font-family "Segoe UI", sans-serif

a:hover
  cursor pointer

h1
  font-size 3rem
  line-height 4.2rem
  font-weight 500
h2
  font-size 2.4rem
  line-height 3rem
  font-weight 500
h3
  font-size 1.8rem
  line-height 2.5rem
  font-weight 500
